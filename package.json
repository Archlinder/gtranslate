    "title": "Alternatives",
    "value": "A",
    "options": [
        {
            "value": "A",
            "label": "Prefer alternative translations"
        },
        {
            "value": "D",
            "label": "Prefer dictonary"
        },
        {
            "value": "S",
            "label": "Prefer synonyms"
        }
    ]
}
