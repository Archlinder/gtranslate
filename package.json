  "preferences": [
    { "type": "string", "title": "lang_from", "name": "lang_from", "value": "auto", "hidden": true },
    { "type": "string", "title": "lang_to", "name": "lang_to", "value": "auto", "hidden": true },
    {
    "description": "Show gTranslate when no text is selected to translate the full page",
    "type": "bool",
    "name": "fullPage",
    "value": true,
    "title": "Full page"
    },
    {
    "name": "dictionaryPref",
    "description": "When translating a single word, prefer these as extra mouseover info",
